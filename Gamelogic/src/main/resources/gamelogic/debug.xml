<Group package="improbable.debug" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="http://docs.improbable.io/schema/v1/GamelogicDefinitionsSchema.xsd">

    <State name="Color" synchronized="true">
        <Properties>
            <Property name="value" type="Vector3f"/>
        </Properties>
    </State>

    <Behaviour name="ColorWriter">
        <State name="Color"/>
        <Interfaces>
            <Interface name="ColorInterface"/>
        </Interfaces>
    </Behaviour>

    <State name="Text" synchronized="true">
        <Properties>
            <Property name="content" type="String"/>
        </Properties>
        <StateEvents>
            <StateEvent name="EmitText">
                <Property name="content" type="String"/>
            </StateEvent>
        </StateEvents>
    </State>

    <Behaviour name="TextWriter">
        <State name="Text"/>
        <Interfaces>
            <Interface name="TextInterface"/>
        </Interfaces>
    </Behaviour>

</Group>